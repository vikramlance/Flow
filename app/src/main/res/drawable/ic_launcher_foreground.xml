<?xml version="1.0" encoding="utf-8"?>
<!--
    T039/US10: Adaptive icon foreground with mandatory 21dp safe-zone padding on all sides.
    The 108dp adaptive icon canvas has a 66dp safe zone (centred).
    Required inset each side = (108dp - 66dp) / 2 = 21dp.
    Using a layer-list with android:top/bottom/left/right="21dp" guarantees all
    content in flow_logo remains fully within the 66dp safe zone on every launcher.
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="21dp"
        android:bottom="21dp"
        android:left="21dp"
        android:right="21dp">
        <bitmap
            android:src="@mipmap/flow_logo"
            android:gravity="center" />
    </item>
</layer-list>
